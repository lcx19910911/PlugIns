                    },
                    RepeatNotice: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    PreheatingTitle: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    PreheatingImage: {
