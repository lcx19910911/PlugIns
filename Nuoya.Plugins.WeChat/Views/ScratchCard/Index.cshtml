                    },
                    ExpectedPeopleCount: {
                        required: "不允许为空",
                        digits: "请输入数字",
                        max: "必须小于{0}",
                        min: "必须大于{0}"
                    }
                }
            });
        }


        //新增
        function add() {
            $.Nuoya.ajaxDialog({
                closeViaDimmer: false,
                width: ($(window).width() - 100) + "px",
                height: ($(window).height() - 100) + "px",
                ajaxUrl: "/HtmlTemplates/ScratchCard/Update.html",
                title: "添加刮刮卡",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {
                        document.forms[0].OverImage.value = document.forms[0].OverImageFile.value;
                        document.forms[0].OngoingImage.value = document.forms[0].OngoingImageFile.value;
                        document.forms[0].PreheatingImage.value = document.forms[0].PreheatingImageFile.value;

                        $.Nuoya.form("form").ajaxSubmit({
                            ajaxUrl: "/ScratchCard/Add",
                            callback: function (data) {
                                if (data.Result == "")
                                {
                                    e.hide();
                                    grid.reload();
                                }
                                else
                                    $.Nuoya.alert(data.Result);
                            }
                        });
                    }
                }]
            })
        }



        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/ScratchCard/GetPageList",
            //数据请求地址
            pageSize: 10,
            events: [
                {
                    className: "am-text-secondary",
                    icon: "icon-pencil-square-o",
                    name: "编辑",
                    click: function (item) {
                        $.Nuoya.ajaxDialog({
                            closeViaDimmer: false,
                            width: ($(window).width() - 100) + "px",
                            height: ($(window).height() - 100) + "px",
                            ajaxUrl: "/HtmlTemplates/ScratchCard/Update.html",
                            title: "编辑刮刮卡",
                            callback: function (e) {
                                $.Nuoya.action("/ScratchCard/Find", { unid: item.UNID }, function (model) {

                                    $('[name=OngoingTime]').datetimepicker('setDate', (model.OngoingTime));
                                    $('[name=OverTime]').datetimepicker('setDate', (model.OverTime));

                                    //载入数据
                                    $.Nuoya.form("form").dataLoad({
                                        data: model
                                    });
                                    formInit(model);//表单初始化
                                    document.forms[0].UNID.value = item.UNID;
                                });
                            },
                            buttons: [{
                                label: "保存",
                                callback: function (e) {
                                    
                                    //var ongoingTime = document.forms[0].OngoingTime.value;
                                    //var hour = document.forms[0].OngoingTimehour.value;
                                    //var minute = document.forms[0].OngoingTimeMinute.value;
                                    //var second = document.forms[0].OngoingTimeSecond.value;
                                    //ongoingTime = ongoingTime + " " + (hour == "" ? 0 : hour) + ":" + (minute == "" ? 0 : minute) + ":" + (second == "" ? 0 : second);

                                    //var overTime = document.forms[0].OverTime.value;
                                    //var overHour = document.forms[0].OverTimehour.value;
                                    //var overMinute = document.forms[0].OverTimeMinute.value;
                                    //var overSecond = document.forms[0].OverTimeSecond.value;
                                    //overTime = overTime + " " + (overHour == "" ? 0 : overHour) + ":" + (overMinute == "" ? 0 : overMinute) + ":" + (overSecond == "" ? 0 : overSecond);

                                    $.Nuoya.form("form").ajaxSubmit({
                                        ajaxUrl: "/ScratchCard/Update",
                                        params: {
                                            UNID: item.UNID
                                        },
                                        callback: function (data) {
                                            if (data.Result == "") {
                                                e.hide();
                                                grid.reload();
                                            }
                                            else
                                                $.Nuoya.alert(data.Result);
                                        }
                                    });
                                }
                            }]
                        })
                    }
                },
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    click: function (item) {
                        $.Nuoya.deleteAction("/ScratchCard/Delete", {
                            unids: item.UNID
                        },
                        function () {
                            grid.reload();
                        });
                    }
                },
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "预览",
                    click: function (item) {
                        debugger;
                        window.open("/ScratchCard/Details?unid=" + item.UNID);
                    }
                }
            ]
        });
    </script>
}
