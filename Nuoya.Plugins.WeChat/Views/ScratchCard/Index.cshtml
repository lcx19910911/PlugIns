                        required: true,
                        digits: true,
                        max: 2147483647,
                        min: -2147483647
                    },
                    AllCountLimt: {
                        required: true,
                        digits: true,
                        max: 2147483647,
                        min: -2147483647
                    },
                    OnePrizeCount: {
                        required: true,
                        digits: true,
                        max: 2147483647,
                        min: -2147483647
                    },
                    TwoPrizeCount: {
                        required: true,
                        digits: true,
                        max: 2147483647,
                        min: -2147483647
                    },
                    ThreePrizeCount: {
                        required: true,
                        digits: true,
                        max: 2147483647,
                        min: -2147483647
                    },
                    ExpectedPeopleCount: {
                        required: true,
                        digits: true,
                        max: 2147483647,
                        min: -2147483647
                    }
                },
                messages: {
                    Name: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    KeyWord: {
                        maxlength: "最多{0}个字符"
                    },
                    OngoingTime: {
                        required: "不允许为空"
                    },
                    OverTime: {
