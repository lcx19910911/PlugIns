                    },
                    OngoingTitle: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    OngoingImage: {
                        required: "不允许为空"
                    },
                    OngoingDescribe: {
                        maxlength: "最多{0}个字符"
                    },
                    OverTitle: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    OverImage: {
