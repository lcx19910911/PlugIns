
@{
    ViewBag.Title = "新闻管理";
}
<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">新闻管理</strong> / <small>News</small></div>
</div>
<div id="searchDomain">

    <div class="am-g">
        <div class="am-u-lg-12">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">状态</span>
                <select name="Flag" data-am-selected="{btnSize: 'sm'}">
                    <option value="-1" selected="selected">不限</option>
                    <option value="0">正常</option>
                    <!--<option value="1">已删除</option>-->
                    <option value="2">已禁用</option>
                </select>
                <span class="am-input-group-label am-margin-left-sm">标题</span>
                <input type="text" class="am-form-field" placeholder="按标题搜索" name="title" ;>
                <span class="am-input-group-label  am-margin-left-sm">发布日期</span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeStart" readonly style="width:100px;">
                <span class="am-input-group-label"> - </span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeEnd" readonly style="width:100px;">
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                </span>
            </div>
        </div>
    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-4">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-sm">
                    <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增</button>
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                    <button onclick="batchEnable()" type="button" class="am-btn am-btn-default"><span class="am-icon-check"></span> 启用</button>
                    <button onclick="batchDisable()" type="button" class="am-btn am-btn-default"><span class="am-icon-close"></span> 禁用</button>
                    <button onclick="batchUpdateCreatedTime()" type="button" class="am-btn am-btn-default"><span class="am-icon-refresh"></span> 更新发布时间</button>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-striped am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="UNID" type="checkbox"></th>
                <th dataname="Title">新闻标题</th>
                <th dataname="NewsType">新闻类型</th>
                <th dataname="Sort">排序</th>
                <th dataname="FlagState">状态</th>
                <th dataname="CreatedTime" datatype="jsondate">发布日期</th>
                <th dataname="UpdatedTime" datatype="jsondate">编辑日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
