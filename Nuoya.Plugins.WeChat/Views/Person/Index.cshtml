
@{
    ViewBag.Title = "人员管理";
}
<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">人员管理</strong></div>
</div>
<div class="am-g" id="searchDomain">
    <div class="am-u-lg-2">
        <div class="am-btn-toolbar">
            <div class="am-btn-group am-btn-group-sm">
                <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增</button>
                <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
            </div>
        </div>
    </div>
    <div class="am-u-lg-3 am-u-end">
        <div class="am-input-group am-input-group-sm">
            <span class="am-input-group-label">分组</span>
            <input type="text" class="am-form-field" name="keyword" placeholder="按姓名/手机号搜索" style="width:auto" />
            <span class="am-input-group-btn">
                <button class="am-btn am-btn-default" type="button" id="btnSearch">搜索</button>
            </span>
        </div>
    </div>
</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-striped am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="UNID" type="checkbox"></th>
                <th dataname="Account">账号</th>
                <th dataname="Name">姓名</th>
                <th dataname="Mobile">手机号</th>
                <th dataname="Remark">备注</th>
                <th dataname="CreatedTime" datatype="jsondate">创建时间</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">
        function formInit(dataitem) {
            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 50
                    },
                    Account: {
                        required: true,
                        maxlength: 50
                    },
                    Mobile: {
                        maxlength: 50
                    },
                    Remark: {
                        maxlength: 256
                    }
                },
                messages: {
                    Name: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Account: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Mobile: {
                        maxlength: "最多{0}个字符"
                    },
                    Remark: {
                        maxlength: "最多{0}个字符"
                    }
                }
            });

            $("select[name='Flag']").selected();


            $.Nuoya.action("/Role/GetSelectItem", { roleFlag: dataitem ? dataitem.RoleFlag : 0 }, function (json) {
                $(json).each(function () {
                    $("select[name='RoleFlagSelect']").append("<option " + (this.Selected == true ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                });
            });

            $("select[name='RoleFlagSelect']").selected();
            $("select[name='RoleFlagSelect']").change(function () {
                var flag;
                var options = $("select[name='RoleFlagSelect'] option:selected");
                for (var i = 0; i < options.length; i++) {
                    if (flag == null) {
                        flag = parseInt(options[i].value);
                    }
                    else {
                        flag |= parseInt(options[i].value);
                    }
                }
                $("input[name=RoleFlag]").val(flag);
            });

        }

        //批量删除
        function batchDelete() {
            grid.del({
                ajaxUrl: "/Person/Delete",
                callback: function (json) {
                    grid.reload();
                }
            });
        }
        //新增
        function add() {
            $.Nuoya.ajaxDialog({
                ajaxUrl: "/HtmlTemplates/Person/Update.html",
                title: "添加人员",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {
                        $.Nuoya.form("form").submit({
                            ajaxUrl: "/Person/Add",
                            callback: function () {
                                e.hide();
                                grid.reload();
                            }
                        });
                    }
                }]
            })
        }
        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Person/GetPageList",
            //数据请求地址
            pageSize: 10,
            events: [{
                className: "am-text-secondary",
                icon: "icon-pencil-square-o",
                name: "编辑",
                click: function (item) {
                    $.Nuoya.ajaxDialog({
                        ajaxUrl: "/HtmlTemplates/Person/Update.html",
                        title: "修改人员",
                        callback: function (e) {
                            //载入数据
                            $.Nuoya.form("form").dataLoad({
                                data: item
                            });
                            formInit(item);//表单初始化
                        },
                        buttons: [{
                            label: "保存",
                            callback: function (e) {
                                debugger
                                $.Nuoya.form("form").submit({
                                    ajaxUrl: "/Person/Update",
                                    params: {
                                        UNID: item.UNID
                                    },
                                    callback: function () {
                                        e.hide();
                                        grid.reload();
                                    }
                                });
                            }
                        }]
                    })
                }
            },
            {
                className: "am-text-danger",
                icon: "icon-trash-o",
                name: "删除",
                click: function (item) {
                    $.Nuoya.deleteAction("/Person/Delete", {
                        unids: item.UNID
                    },
                    function () {
                        grid.reload();
                    });
                }
            }]
        });
    </script>
}
