@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>登录</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    @*<link rel="alternate icon" type="image/png" href="assets/i/favicon.png">*@
    <link href="~/Styles/css/amazeui.css" rel="stylesheet" />
    <style>
        .header {
            text-align: center;
        }

            .header h1 {
                font-size: 200%;
                color: #333;
                margin-top: 30px;
            }

            .header p {
                font-size: 14px;
            }
    </style>
</head>
<body>
    <div class="header">
        <div class="am-g">
            <h1>活动后台 - 登录</h1>
        </div>
        <hr />
    </div>
    <div class="am-g">
        <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">
            <form method="post" class="am-form" id="form">
                <label for="account">工号:</label>
                <input type="text" name="account" value="">
                <br>
                <label for="password">密码:</label>
                <input type="password" name="password" value="">
                <br>
                <div class="am-cf">
                    <input type="button" id="btnSubmit" name="" value="登 录" class="am-btn am-btn-primary  am-btn-block">
                </div>
            </form>
            <hr>
            <p>版权信息</p>
        </div>
    </div>

    @Scripts.Render("~/Scripts/Login")

    <script type="text/javascript">
        function onSubmit(e) {
            if (document.forms[0].account.value == "") {
                alert("请输入账号");
                return false;
            }
            if (document.forms[0].password.value == "") {
                alert("请输入密码");
                return false;
            }
            if (e)
            { e.preventDefault(); }
            $.Nuoya.action("/Login/Submit", { password: document.forms[0].password.value, account: document.forms[0].account.value }, function (data) {
                if (data)
                    window.location.href = "/";
            });
        }
        $(function () {

            $("[name='account']").keydown(function (e) {
                if (e.keyCode == 13) {
                    onSubmit();
                }
            });
            $("[name='password']").keydown(function (e) {
                if (e.keyCode == 13) {
                    onSubmit();
                }
            });
            $("#btnSubmit").click(function (e) {
                onSubmit(e);
            });
        });
    </script>
</body>
</html>