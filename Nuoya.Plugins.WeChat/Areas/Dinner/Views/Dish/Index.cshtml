

@{
    ViewBag.Title = "菜品管理";
    Layout = "~/Areas/Dinner/Views/Shared/_Layout.cshtml";
}

<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">菜品管理</strong></div>
</div>
<div id="searchDomain">

    <div class="am-g">
        <div class="am-u-lg-12">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">名称</span>
                <input type="text" class="am-form-field " placeholder="按分类名称搜索" name="name" ;>
                <span class="am-input-group-label am-margin-left-sm">菜品分类</span>
                <select name="CategoryId" data-am-selected="{btnSize: 'sm'}">
                </select>
                <span class="am-input-group-label  am-margin-left-sm">创建日期</span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeStart" readonly style="width:auto;">
                <span class="am-input-group-label"> - </span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeEnd" readonly style="width:auto;">
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>
    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-4">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-sm">
                    <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增</button>
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-striped am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="UNID" type="checkbox"></th>
                <th dataname="Name">分类名称</th>
                <th dataname="Sort">排序</th>
                <th dataname="Name">分类名称</th>
                <th dataname="Sort">排序</th>
                <th dataname="CreatedTime" datatype="jsondate">创建日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">
        $('[name=createdTimeStart]').datepicker({ format: 'yyyy-mm-dd' });
        $('[name=createdTimeEnd]').datepicker({ format: 'yyyy-mm-dd' });


        function ClearFilter() {
            $("#searchDomain input").val("");
        }

        //批量删除
        function batchDelete() {
            grid.del({
                ajaxUrl: "/Dish/Delete",
                callback: function (json) {
                    grid.reload();
                }
            });
        }
        $(function () {
            $("select[name='CategoryId']").append("<option value='0'>不限</option>");
            $.Nuoya.action("/Category/GetSelectItem", {}, function (json) {
                $(json).each(function () {
                    $("select[name='DinnerCategoryId']").append("<option  value='" + this.Value + "'>" + this.Text + "</option>");
                });
            });
        });

        function formInit(dataitem) {

            if (dataitem != null) {
                if (dataitem.Image != null) {
                    $("#imageDiv").show().find("img").attr("src", dataitem.Image);
                }
                if (dataitem.State == 1) {
                    $("input[name='State']").attr("checked", "checked");
                }
            }
            $.Nuoya.action("/Category/GetSelectItem", { cid: dataitem ? dataitem.DinnerCategoryId : "" }, function (json) {
                $(json).each(function () {
                    $("select[name='DinnerCategoryId']").append("<option " + (this.Selected == true ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                });
            });


            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 25
                    },
                    Sort: {
                        required: true,
                        digits: true
                    },
                    Price: {
                        required: true,
                        min: 0,
                        max: 999999999
                    },
                    Label: {
                        maxlength: 100
                    },
                    Image: {
                        required: true
                    },
                    Description: {
                        maxlength: 500
                    }
                },
                messages: {
                    Name: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Sort: {
                        required: "不允许为空",
                        digits: "请输入数字"
                    },
                    Price: {
                        required: "不允许为空",
                        min: "最小金额{0}元",
                        max: "最大金额{0}元"
                    },
                    Label: {
                        maxlength: "最多{0}个字符"
                    },
                    Image: {
                        required: "不允许为空",
                    },
                    Description: {
                        maxlength: "最多{0}个字符"
                    }
                }
            });
            var auth = "@(Request.Cookies["LoginUserCookie"]==null ? string.Empty : Request.Cookies["LoginUserCookie"].Value)";
            var ASPSESSID = "@Session.SessionID";

            $("#imageFile").uploadify({
                'formData': { mark: 'DinnerDish', 'ASPSESSID': ASPSESSID, 'AUTHID': auth },
                'swf': '/Scripts/uploadify/uploadify.swf',
                'uploader': '/upload/uploadimage',
                'buttonText': '选择图片',
                'auto': true,
                'multi': false,
                'removeCompleted': true,
                'fileSizeLimit': '2048KB',
                'fileTypeExts': '*.jpg;*.jpeg;*.png;;*.gif',
                'onUploadSuccess': function (file, data, response) {
                    var data = JSON.parse(data);
                    if (data.Code == 0) {
                        $("[name='Image']").val(data.Result);
                        $("#imageDiv").show().find("img").attr("src", data.Result);

                    } else {
                        $.Nuoya.alert("上传错误");
                    }
                }
            });
        }

        //新增
        function add() {
            $.Nuoya.ajaxDialog({
                closeViaDimmer: false,
                width: ($(window).width() - 200) + "px",
                height: ($(window).height() - 100) + "px",
                ajaxUrl: "/HtmlTemplates/DinnerDish/Update.html",
                title: "添加分类",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {

                        if (document.getElementById('chk_state').checked) {
                            document.forms[0].State.value = "1";
                        }
                        else {
                            document.forms[0].State.value = "0";
                        }

                        $.Nuoya.form("form").ajaxSubmit({
                            ajaxUrl: "/Dish/Add",
                            callback: function (data) {
                                if (data.Result == "") {
                                    e.hide();
                                    grid.reload();
                                }
                                else
                                    $.Nuoya.alert(data.Result);
                            }
                        });
                    }
                }]
            })
        }

        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Dish/GetPageList",
            //数据请求地址
            pageSize: 10,
            events: [
                {
                    className: "am-text-secondary",
                    icon: "icon-pencil-square-o",
                    name: "编辑",
                    click: function (item) {
                        $.Nuoya.ajaxDialog({
                            closeViaDimmer: false,
                            width: ($(window).width() - 200) + "px",
                            height: ($(window).height() - 100) + "px",
                            ajaxUrl: "/HtmlTemplates/DinnerDish/Update.html",
                            title: "编辑分类",
                            callback: function (e) {
                                $.Nuoya.action("/Dish/Find", { unid: item.UNID }, function (model) {
                                    //载入数据
                                    $.Nuoya.form("form").dataLoad({
                                        data: model
                                    });
                                    formInit(model);//表单初始化
                                    document.forms[0].UNID.value = item.UNID;
                                });
                            },
                            buttons: [{
                                label: "保存",
                                callback: function (e) {

                                    if (document.getElementById('chk_state').checked) {
                                        document.forms[0].State.value = "1";
                                    }
                                    else {
                                        document.forms[0].State.value = "0";
                                    }

                                    $.Nuoya.form("form").ajaxSubmit({
                                        ajaxUrl: "/Dish/Update",
                                        params: {
                                            UNID: item.UNID
                                        },
                                        callback: function (data) {
                                            if (data.Result == "") {
                                                e.hide();
                                                grid.reload();
                                            }
                                            else
                                                $.Nuoya.alert(data.Result);
                                        }
                                    });
                                }
                            }]
                        })
                    }
                },
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    click: function (item) {
                        $.Nuoya.deleteAction("/Dish/Delete", {
                            unids: item.UNID
                        },
                        function () {
                            grid.reload();
                        });
                    }
                }
            ]
        });
    </script>
}
