

@{
    ViewBag.Title = "门店管理";
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}

<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">门店管理</strong></div>
</div>
<div id="searchDomain">

    <div class="am-g">
        <div class="am-u-lg-12">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">名称</span>
                <input type="text" class="am-form-field" placeholder="按名称搜索" name="name" ;>
                <span class="am-input-group-label  am-margin-left-sm">创建日期</span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeStart" readonly style="width:auto;">
                <span class="am-input-group-label"> - </span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeEnd" readonly style="width:auto;">
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>
    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-4">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-sm">
                    <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增</button>
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                    <button onclick="batchEnable()" type="button" class="am-btn am-btn-default"><span class="am-icon-check"></span> 启用</button>
                    <button onclick="batchDisable()" type="button" class="am-btn am-btn-default"><span class="am-icon-close"></span> 禁用</button>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-striped am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="UNID" type="checkbox"></th>
                <th dataname="Name">店铺名称</th>
                <th dataname="Sort">排序</th>
                <th dataname="HoldTime">营业时间</th>
                <th dataname="Flag">状态</th>
                <th dataname="CreatedTime" datatype="jsondate">创建日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">
        $('[name=createdTimeStart]').datepicker({ format: 'yyyy-mm-dd' });
        $('[name=createdTimeEnd]').datepicker({ format: 'yyyy-mm-dd' });


        function ClearFilter() {
            $("#searchDomain input").val("");
        }

        //批量删除
        function batchDelete() {
            grid.del({
                ajaxUrl: "/Shop/Delete",
                callback: function (json) {
                    grid.reload();
                }
            });
        }

        //批量启用
        function batchEnable() {
            grid.batchAction({
                message: "确定批量启用？",
                ajaxUrl: "/Shop/Enable",
                callback: function (json) {
                    grid.reload();
                }
            });
        }

        //批量禁用
        function batchDisable() {
            grid.batchAction({
                message: "确定批量禁用？",
                ajaxUrl: "/Shop/Disable",
                callback: function (json) {
                    grid.reload();
                }
            });
        }

        function formInit(dataitem) {

            if (dataitem != null) {
                if (dataitem.Image != null) {
                    $("#imageDiv").show().find("img").attr("src", dataitem.Image);
                }
                if (dataitem.StartShoptime != null) {
                    $("[name='StartShoptime']").val(dataitem.StartShoptime);
                }
                if (dataitem.EndShoptime != null) {
                    $("[name='EndShoptime']").val(dataitem.EndShoptime);
                }
            }

            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 25
                    },
                    Account: {
                        maxlength: 12,
                        minlength: 6
                    },
                    Password: {
                        maxlength: 15,
                        minlength: 6
                    },
                    Sort: {
                        required: true,
                        digits: true
                    },
                    ContactPhone: {
                        phoneMobile: true,
                        maxlength: 11
                    },
                    Address: {
                        maxlength: 500
                    }
                },
                messages: {
                    Name: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Account: {
                        minlength: "最少{0}个字符",
                        maxlength: "最多{0}个字符"
                    },
                    Password: {
                        minlength: "最少{0}个字符",
                        maxlength: "最多{0}个字符"
                    },
                    Sort: {
                        required: "不允许为空",
                        digits: "请输入数字"
                    },
                    ContactPhone: {
                        phoneMobile: "请输入正确的手机号码",
                        maxlength: "最多{0}个字符"
                    },
                    Address: {
                        maxlength: "最多{0}个字符"
                    }
                }
            });

            $("#imageFile").uploadify({
                'formData': { mark: 'DinnerShop' },
                'swf': '/Scripts/uploadify/uploadify.swf',
                'uploader': '/upload/uploadimage',
                'buttonText': '选择图片',
                'auto': true,
                'multi': false,
                'removeCompleted': true,
                'fileSizeLimit': '2048KB',
                'fileTypeExts': '*.jpg;*.jpeg;*.png;;*.gif',
                'onUploadSuccess': function (file, data, response) {
                    var data = JSON.parse(data);
                    if (data.Code == 0) {
                        $("[name='Image']").val(data.Result);
                        $("#imageDiv").show().find("img").attr("src", data.Result);

                    } else {
                        $.Nuoya.alert("上传错误");
                    }
                }
            });
        }

        //新增
        function add() {
            $.Nuoya.ajaxDialog({
                closeViaDimmer: false,
                width: ($(window).width() - 200) + "px",
                height: ($(window).height() - 100) + "px",
                ajaxUrl: "/HtmlTemplates/DinnerShop/Update.html",
                title: "添加门店",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {

                        var startTime = document.forms[0].StartShoptime.value;
                        var overTime = document.forms[0].EndShoptime.value;
                        if (startTime > overTime) {
                            $.Nuoya.alert("开始时间必须小于结束时间");
                            return false;
                        }

                        $.Nuoya.form("form").ajaxSubmit({
                            ajaxUrl: "/Shop/Add",
                            callback: function (data) {
                                if (data.Result == "") {
                                    e.hide();
                                    grid.reload();
                                }
                                else
                                    $.Nuoya.alert(data.Result);
                            }
                        });
                    }
                }]
            })
        }

        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Shop/GetPageList",
            //数据请求地址
            pageSize: 10,
            events: [
                {
                    className: "am-text-secondary",
                    icon: "icon-pencil-square-o",
                    name: "编辑",
                    click: function (item) {
                        $.Nuoya.ajaxDialog({
                            closeViaDimmer: false,
                            width: ($(window).width() - 200) + "px",
                            height: ($(window).height() - 100) + "px",
                            ajaxUrl: "/HtmlTemplates/DinnerShop/Update.html",
                            title: "编辑门店",
                            callback: function (e) {
                                $.Nuoya.action("/Shop/Find", { unid: item.UNID }, function (model) {
                                    //载入数据
                                    $.Nuoya.form("form").dataLoad({
                                        data: model
                                    });
                                    formInit(model);//表单初始化
                                    document.forms[0].UNID.value = item.UNID;


                                });
                            },
                            buttons: [{
                                label: "保存",
                                callback: function (e) {

                                    var startTime = document.forms[0].StartShoptime.value;
                                    var overTime = document.forms[0].EndShoptime.value;
                                    if (startTime > overTime) {
                                        $.Nuoya.alert("开始时间必须小于结束时间");
                                        return false;
                                    }

                                    $.Nuoya.form("form").ajaxSubmit({
                                        ajaxUrl: "/Shop/Update",
                                        params: {
                                            UNID: item.UNID
                                        },
                                        callback: function (data) {
                                            if (data.Result == "") {
                                                e.hide();
                                                grid.reload();
                                            }
                                            else
                                                $.Nuoya.alert(data.Result);
                                        }
                                    });
                                }
                            }]
                        })
                    }
                },
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    click: function (item) {
                        $.Nuoya.deleteAction("/Shop/Delete", {
                            unids: item.UNID
                        },
                        function () {
                            grid.reload();
                        });
                    }
                },
                {
                    className: "am-text-danger",
                    icon: "icon-close",
                    name: "禁用",
                    formula: function (item) {
                        if (item.Flag == "正常") {
                            return true;
                        }
                        else {
                            return false;
                        }
                    },
                    click: function (item) {
                        $.Nuoya.action("/Shop/Disable", {
                            unids: item.UNID
                        },
                        function () {
                            grid.reload();
                        });
                    }
                },
                {
                    className: "am-text-danger",
                    icon: "icon-check",
                    name: "启用",
                    formula: function (item) {
                        if (item.Flag == "已禁用") {
                            return true;
                        }
                        else {
                            return false;
                        }
                    },
                    click: function (item) {
                        $.Nuoya.action("/Shop/Enabled", {
                            unids: item.UNID
                        },
                        function () {
                            grid.reload();
                        });
                    }
                }
            ]
        });
    </script>
}
