

@{
    ViewBag.Title = "推荐管理";
    Layout = "~/Areas/Mall/Views/Shared/_Layout.cshtml";
}

<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">推荐管理</strong></div>
</div>
<div id="searchDomain">

    <div class="am-g">
        <div class="am-u-lg-12">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">名称</span>
                <input type="text" class="am-form-field" placeholder="按推荐类型名称搜索" name="name" ;>
                <span class="am-input-group-label am-margin-left-sm">推荐类别</span>
                <select name="targetCode" data-am-selected="{btnSize: 'sm'}">
                    <option value="1">首页推荐商品</option>
                    <option value="2">首页推荐分类</option>
                </select>
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>
    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-4">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-sm">
                    <button onclick="addGoods()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增商品推荐</button>
                    <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增分类推进</button>
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-striped am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="UNID" type="checkbox"></th>
                <th dataname="Name">分类名称</th>
                <th dataname="Title">推荐标题</th>
                <th dataname="RecommendCode">推荐类型</th>             
                <th dataname="TargetName">类型名</th>
                <th dataname="TargetCode">类型</th>
                <th dataname="Sort">排序</th>
                <th dataname="CreatedTime" datatype="jsondate">创建日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">
        function ClearFilter() {
            $("#searchDomain input").val("");
        }

        //批量删除
        function batchDelete() {
            grid.del({
                ajaxUrl: "/Mall/Recommend/Delete",
                callback: function (json) {
                    grid.reload();
                }
            });
        }


        function formInit(dataitem) {

            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    Title: {
                        maxlength: 64
                    },
                    Sort: {
                        required: true,
                        digits: true
                    },
                    TargetID: {
                        required: true
                    },
                    TargetCode: {
                        required: true
                    },
                    RecommendCode: {
                        required: true
                    }
                },
                messages: {
                    Title: {
                        maxlength: "最多{0}个字符"
                    },
                    Sort: {
                        required: "不允许为空",
                        digits: "请输入数字"
                    },
                    TargetID: {
                        required: "不允许为空"
                    },
                    TargetCode: {
                        required: "不允许为空"
                    },
                    RecommendCode: {
                        required: "不允许为空"
                    }
                }
            });
        }

        //新增
        function addGoods() {

            
            $.Nuoya.ajaxDialog({
                width: "1000px",
                height: "600px",
                closeViaDimmer: false,
                ajaxUrl: "/HtmlTemplates/MallRecommend/Recommend.html",
                title: "添加分类",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {

                        $.Nuoya.form("form").ajaxSubmit({
                            ajaxUrl: "/Mall/Recommend/Add",
                            callback: function (data) {
                                if (data.Result == "") {
                                    e.hide();
                                    grid.reload();
                                }
                                else
                                    $.Nuoya.alert(data.Result);
                            }
                        });
                    }
                }]
            })
        }

        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Mall/Recommend/GetPageList",
            //数据请求地址
            pageSize: 10,
            events: [
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "取消推荐",
                    click: function (item) {
                        $.Nuoya.deleteAction("/Mall/Recommend/Delete", {
                            unids: item.UNID
                        },
                        function () {
                            grid.reload();
                        });
                    }
                }
            ]
        });
    </script>
}
