
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,height=device-height, user-scalable=no,initial-scale=1, minimum-scale=1, maximum-scale=1">
    <title>商铺首页</title>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="HandheldFriendly" content="true">
    <meta name="MobileOptimized" content="320">
    <meta name="screen-orientation" content="portrait">
    <meta name="x5-orientation" content="portrait">
    <meta name="full-screen" content="no">
    <meta name="x5-fullscreen" content="true">
    <meta name="x5-page-mode" content="app">
    <meta name="msapplication-tap-highlight" content="no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <link rel="shortcut icon" href="http://statics.oneplus.cn/img/oneplus.ico" type="image/x-icon">
    <link href="~/Styles/mall/Up.css" rel="stylesheet" />
    <link href="~/Styles/mall/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="tour">
            <a href="/user/home/index" class="tour1"><img src="~/Styles/mall/img/back.png" alt="" style="height: 26px;width: 20px"></a>
            <p>积分商城</p>
        </div>
        <div class="categoryTip">
            <a href="#">推荐分类</a>
        </div>
        @Html.Action("HomeCategory", "Recommend")
        
        
        <div class="store">
            <ul>
                <li class="li1"><a href="#">推荐商品</a></li>
                <li class="li2">
                <a href="/mall/goods/allgoods" class="xlmenu">全部商品&nbsp;
                    <img src="~/Styles/mall/img/go.png" style="width: 12px;display: inline"></a></li>
            </ul>
        </div>
        <div class="clear"></div>
        <div class="border">

        </div>
        @Html.Action("HomeGoods", "Recommend")      
        <div class="wx_nav" id="wx_nav">
            <a href="/user/home/index" class="nav_index" id="nav_index">用户中心</a>
            <a href="/mall/order/list" class="nav_me on" id="nav_me on">订单</a>
        </div>
    </div>
    <footer>
        <div class="footer">
            <p>没有更多了</p>
        </div>
    </footer>
    <div class="actGotop"><a href="javascript:;" title="返回顶部"></a> <img src="~/Styles/mall/img/fanhui.png" alt=""></div>
    <div class="theme-popover-mask"></div>
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/mall/touch.js"></script>
    <script type="text/javascript" src="~/Scripts/mall/srcolltop.js"></script>
    <script type="text/javascript" src="~/Scripts/mall/xlmenu.js"></script>
    <script>
        $(function () {
            $("figure:eq(0)").css({
                border:'none'
            });
            $("figure:eq(1)").css({
                border:'none'
            });
                var titleName=$(".ycmenu a");
                for(var i =0;i<titleName.length;i++){
                titleName[i].id=i;
                titleName[i].onmouseover=function(){
                for(var j =0;j<titleName.length;j++){
                titleName[j].className="";
            }
                this.className = "a";
            }}
        })
    </script>
</body>
</html>