                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    RepeatNotice: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    PreheatingTitle: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    PreheatingDescribe: {
                        maxlength: "最多{0}个字符"
                    },
                    OngoingTitle: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    OngoingDescribe: {
                        maxlength: "最多{0}个字符"
                    },
                    OverTitle: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    OverDescribe: {
                        maxlength: "最多{0}个字符"
                    },

                    OnePrize: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    TwoPrize: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    ThreePrize: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },

                    DayLimt: {
                        required: "不允许为空",
                        digits: "请输入数字",
