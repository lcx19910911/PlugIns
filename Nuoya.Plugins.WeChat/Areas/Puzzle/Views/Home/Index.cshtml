@model Repository.Puzzle
@{
    Layout = null;
}

<!doctype html>
<html>
<head>

    <meta charset="gbk">

    <title>拼图中心</title>
    <meta name="keyword" content="拼图中心" />
    <meta name="description" content="拼图中心" />

    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="HandheldFriendly" content="true">
    <meta name="MobileOptimized" content="320">
    <meta name="screen-orientation" content="portrait">
    <meta name="x5-orientation" content="portrait">
    <meta name="full-screen" content="yes">
    <meta name="x5-fullscreen" content="true">
    <meta name="x5-page-mode" content="app">
    <meta name="msapplication-tap-highlight" content="no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <link href="~/Styles/sign/common_pc.css" rel="stylesheet" />
    <link href="~/Styles/sign/m-index.css" rel="stylesheet" />

    <style>
        body {
        
            background-color:#e3e3e3;
        }
        a {
            color: #fff;
        }
        ul 
        {
            padding:10px;
        }
        ul li {
            float:left;
            width:25%;
            height:40px;
            font-size:18px;
        }
        ul li  a
        {
            display:inline;
            line-height:10px;
            height:100%;
            text-align:center;
         }

        /* 右侧图片 */
        .ImagDiv {
            width: 100%;
            height: 300px;
        }
        
        .Description {
            width: 100%;
            margin: 0 auto;
            padding: 16px 0px 10px 0px;
        }
        .Description h1{
            color: #ee5729;
            font-size:14px;
            margin-left:20px;
            padding:6px;
        }     

        .imgFieldSet {           
            min-height: 200px;
        }
        #imgArea {
            width: 300px;
            height: 300px;
            position: relative;
            margin: 0px auto;
        }

            #imgArea div.imgCell {
                float: left;
                width: 73px;
                height: 73px;
                border: 1px solid #fff;
                border-radius: 4px;
                position: absolute;
                z-index: 10;
                box-shadow: 0px 0px 8px #fff;
                transition-property: background-position;
                transition-duration: 300ms;
                transition-timing-function: ease-in-out;
            }

            #imgArea div.hover {
                filter: alpha(opacity=80);
                opacity: .8;
                box-shadow: 0px 0px 8px #000;
                z-index: 20;
                *border: 1px solid #09F;
            }
    </style>
</head>

<body >
@if (!(bool)ViewData["LastOne"])
{
    <div id="op-content" style="background:#ee5729;">          
        <header class="op-top-header header">
            <div class="op-top-box">
                <ul>
                    <li><a id="start" href="#">开始</a></li>
                    <li><a id="rule" href="#">游戏规则</a></li>
                    <li><a id="compareImg" href="#">原图</a></li>
                        <li><a href="/puzzle/home/index?unid=@(Model.UNID)">下一个</a></li>
                </ul>
            </div>
        </header>
    </div>


    <div id="op-wrap">      
        <div class="ImagDiv">
            <fieldset>
                <div id="imgArea"></div>
            </fieldset>
        </div>
        <div class="Description">
            <h1>图片介绍：</h1>
            <fieldset class="imgFieldSet">
                @Html.Raw(Model.Description)       
            </fieldset>
        </div>

        <div class="dialog-alert-layer" style="display: none;" id="ruleDescription">
            <table>
                <tbody>
                    <tr>
                        <td>
                            <div class="alert-main">
                                <close class="close">×</close>
                                <div class="title">游戏介绍</div>
                                <div class="content">
                                   1、点击游戏难度以更改。<br>2、点击开始游戏，打乱图片。<br>3、交换图片位置，复原图片。
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="dialog-alert-layer" style="display: none;" id="bindCom">
            <table>
                <tbody>
                    <tr>
                        <td>
                            <div class="alert-main">
                                <close class="close">×</close>
                                <div class="title"></div>
                                <div class="content">
                                    <div id="bindName"></div>
                                    <div class="signBtn">
                                        <a id="sign-btn">签到</a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="dialog-alert-layer" style="display: none;" id="compareImgAlert">
            <table>
                <tbody>
                    <tr>
                        <td>
                            <div class="alert-main">
                                <close class="close">×</close>
                                <div class="title">原图</div>
                                <div class="content">
                                    <img src="@(Model.Image)"  style="width:250px;"/>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/activity/puzzle/gameobject.js"></script>
    <script type="text/javascript">
        /* 加入图片，运行代码 */
        $(function () {
            var pg = new puzzleGame(
                {
                    'img': '@(Model.Image)',
                    'UNID':'@(Model.UNID)',
                    'levelArr': [[@(Model.DifficultyType),@(Model.DifficultyType)]]  //存储难度等级的数组
                });

            $("#rule").click(function () {
                $("#ruleDescription").show();
            });

            $("#ruleDescription .close").click(function () {
                $("#ruleDescription").hide();
            });

            $("#compareImg").click(function () {
                $("#compareImgAlert").show();
            });

            $("#compareImgAlert .close").click(function () {
                $("#compareImgAlert").hide();
            });
        });
    </script>
}
else
{
    <script>
        alert("你已经玩完所有的拼图");
    </script>
}
</body>
</html>
